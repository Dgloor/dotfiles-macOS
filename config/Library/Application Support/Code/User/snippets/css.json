{
	"Css Resets": {
		"prefix": "reset",
		"body": [
			"* {",
			"  padding: 0;",
			"  margin: 0;",
			"  box-sizing: border-box;",
			"}"
		],
		"description": "First thing first."
	},
	"Media query: sm": {
		"prefix": "mediasm",
		"body": [
			"@media screen and (min-width: 640px) {",
			"\t$1",
			"}"
		]
	},
	"Media query: md": {
		"prefix": "mediamd",
		"body": [
			"@media screen and (min-width: 768px) {",
			"\t$1",
			"}"
		]
	},
	"Media query: lg": {
		"prefix": "medialg",
		"body": [
			"@media screen and (min-width: 1024px) {",
			"\t$1",
			"}"
		]
	},
	"Media query: 2xl": {
		"prefix": "media2xl",
		"body": [
			"@media screen and (min-width: 1536px) {",
			"\t$1",
			"}"
		]
	},
}